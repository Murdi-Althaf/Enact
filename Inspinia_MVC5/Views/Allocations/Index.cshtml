@model IEnumerable<Enact.Models.BackendViewModels.AllocationView>

@{
    ViewBag.Title = "Index";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Allocation</h2>
        <ol class="breadcrumb">
            <li class="active">
                <strong>Allocation List (Private)</strong>
            </li>
        </ol>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>List of Allocations</h5>
					
                </div>
                <div class="ibox-content">

<table class="table table-striped table-bordered table-hover dataTables-example">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.allocation.Block)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.allocation.Combination_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.allocation.isAllocated)
            </th>
            <th>
                @Html.DisplayName("Audit")
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.allocation.Block)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.allocation.Combination_ID)
                </td>
                <td>
                    @if (item.allocation.isAllocated == true)
                    {
                        <p>Allocated</p>
                    }
                    else
                    {
                        <p>Unallocated</p>
                    }

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.auditname)
                </td>

            </tr>
        }
    </tbody>
</table>

                </div>
            </div>
        </div>
    </div>
 </div>


@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")

    <script type="text/javascript">
        $(document).ready(function () {

            $('.dataTables-example').DataTable({
                pageLength: 25,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'copy' },
                    { extend: 'csv' },
                    { extend: 'excel', title: 'Allocationlist' },
                    { extend: 'pdf', title: 'Allocationlist' },

                    {
                        extend: 'print',
                        customize: function (win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                    .addClass('compact')
                                    .css('font-size', 'inherit');
                        }
                    }
                ]

            });



        });

    </script>
}
