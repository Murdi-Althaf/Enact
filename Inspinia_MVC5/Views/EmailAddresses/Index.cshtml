@model IEnumerable<Enact.Models.EmailAddress>

@{
    ViewBag.Title = "Index";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Email Addresses</h2>
        <ol class="breadcrumb">
            <li class="active">
                <strong>List of participants Emails</strong>
            </li>
        </ol>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>List of Email Addresses</h5>
					
                </div>
                <div class="ibox-content">

<table class="table table-striped table-bordered table-hover dataTables-example">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Email Address")
            </th>
            <th>
                @Html.DisplayName("Completed Survey")
            </th>
            <th>
                @Html.DisplayName("Sent Voucher")
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email_address)
                </td>
                <td>
                    @if (item.Completed_survey == true)
                    {
                        <p>Completed</p>
                    }
                    else
                    {
                        <p>Dropped Out</p>
                    }
                </td>
                <td>
                    @if (item.Sent_voucher == true)
                    {
                        <p>Sent Voucher</p>
                    }
                    else
                    {
                        <p>Voucher pending</p>
                    }
                </td>

                @if (item.Sent_voucher == false && item.Completed_survey==true)
                {
                    <td>
                        @Html.ActionLink("Send", "Send", new { id = item.ID }, new { @class = "btn btn-primary btn-sm" })
                    </td>
                }
                else
                {
                    <td></td>
                }
            </tr>
        }
    </tbody>
</table></div></div></div></div></div>

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")

    <script type="text/javascript">
        $(document).ready(function () {

            $('.dataTables-example').DataTable({
                pageLength: 25,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'copy' },
                    { extend: 'csv' },
                    { extend: 'excel', title: 'EmailList' },
                    { extend: 'pdf', title: 'EmailList' },

                    {
                        extend: 'print',
                        customize: function (win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                    .addClass('compact')
                                    .css('font-size', 'inherit');
                        }
                    }
                ]

            });



        });

    </script>
}
