@model IEnumerable<Enact.Models.BackendViewModels.TrialView>

@{
    ViewBag.Title = "Index";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Trials</h2>
        <ol class="breadcrumb">
            <li class="active">
                <strong>Full list of Trials</strong>
            </li>
        </ol>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>List of Trials</h5>
					
                </div>
                <div class="ibox-content">

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayName("Trial Number")
        </th>
        <th>
            @Html.DisplayName("Audit")
        </th>
        <th>
            @Html.DisplayName("Start Date")
        </th>
        <th>
            @Html.DisplayName("Status")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.trial.Trial_ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.audit.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.run.StartDate)
        </td>
        <td>
            @if (item.run.EndDate == null)
            {
                <p>Drop Out</p>
            }
            else
            {
                <p>Completed</p>
            }
        </td>
        <td>

			@Html.ActionLink("Survey Results", "survey", new { id=item.trial.Trial_ID }, new { @class = "btn btn-primary btn-sm"})
            @Html.ActionLink("View Allocation", "allocation", new { id=item.trial.Trial_ID  }, new { @class = "btn btn-primary btn-sm" })
            @Html.ActionLink("Analytics", "analytics", new { id=item.run.ID }, new { @class = "btn btn-primary btn-sm" })
        </td>
    </tr>
}

</table>

                </div>
            </div>
        </div>
    </div>
 </div>



